{% extends "base.html.twig" %}
{% block title %}Liste des cursus{% endblock %}
{% block body %}
<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2 px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des cursus</h1>

		<h2>{{ sous_titre }}</h2>
		<ul>
			{% if (cursus_liste is not empty) %}
				{% for i in cursus_liste %}
					<a href="/cursus/listeCursus"><li>{{ i.getNomCursus()}} {{i.getAnneeScolaire}}
						
					</li></a>
				{% endfor %}
			{% else %}
				<p>Pas de cursus</p>

			{% endif %}


		</ul>
    <a href="/etudiant/new"><button>Créer un étudiant</button></a>
	</div>


{% endblock %}